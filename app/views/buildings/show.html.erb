


<div id="wrap">
    <div class="ui raised segment row" style="width:90%">
    <div class="ui top attached purple label">
        <h1 style="padding-top:1%; padding-bottom:1px" id="title"></h1>
      

    </div>
    
        <div class="columns">
        
            <div id="map" style="height:400px; width:100%">Here should be the map</div>

        </div>

        <div class="columns" >
        <div class="ui top attached tabular menu">
            <a class="item active" data-tab="first">All Squawks</a>
            <a class="item" data-tab="second"> New Squawks</a>
            <a class="item" data-tab="third">Violations</a>
        </div>



        <script>
        
        $(document).ready(function(){
            $("formname").submit();
        });
        </script>



        <%= form_tag("/buildings/show", method:"get")  do %>
            <%= text_field_tag :bin1, ""%>
            <%= submit_tag 'Search'%>
              <%end%>

        <div class="ui bottom attached tab active segment" data-tab="first">


        <% @comments.each do |comment| %>
        <div class="ui card">
      <div class="content">
          <label><a class="ui teal right ribbon label">Squawk</a></label>
      <div class="header"><%=comment.comment_type%></div>
          <div class="description">
              <p>  <%=comment.body%> 
              </p>
          </div>
      </div>
      <div class="extra content">
          <span class="left floated like">
              <i class="like icon"></i>
              Like
          </span>
      </div>
  </div>
           <%end%>
       



</div>



      <div class="ui bottom attached tab segment" data-tab="second">  
      <div class="ui card">
      <div class="content">
          <label><a class="ui tag label">New Squawk</a></label>



          <%= form_with model: Comment.new do |form| %>
          <div class="ui form">
              <div class="field">
                  <label>User ID</label>
                  <%= form.number_field :user_id, placeholder: "User ID"%>
              </div>

              <div class="field">
                  <label>Building ID</label>
                  <%= form.number_field :building_id, placeholder: "Building ID", :id => 'bin'%>
                </div>


                <div class="field">
                <label>Type</label>
                <%= form.text_field :comment_type, placeholder: "Comment type"%>
                </div>

                <div class="field">
                <label>Rating</label>
                <%= form.number_field :rating, placeholder: "Rating"%>
                </div>

                <div class="field">
                <label>Body</label>
                <%= form.text_field :body, placeholder: "Content..."%>
                </div>

              <div class="field">
                  <div class="ui checkbox">
                      <input type="checkbox" tabindex="0" class="hidden">
                      <label>I agree I am responsible for my squawks</label>
                  </div>
              </div>    
              <%= form.submit  "Submit" %>
              <% end %>


          </div>  
      </div>  
    </div>
    </div>


   



      <div class="ui bottom attached tab segment" data-tab="third">
        Violations
      </div>

        </div> 
    </div>
</div>




