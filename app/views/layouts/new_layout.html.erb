<!DOCTYPE html>
<html>
  <head>
    <title>SQUAWKR</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
    <%= stylesheet_link_tag   "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 
  <body class="newlayout-body">
  <div class="main-nav">
<div class="logo">Squawkr</div>
# Log in and log out 
  <% if current_user %>
  <div class="about_in">
  <div class="nav-links">
     <a href="/users"><div class="item">About</div></a>
  </div>
  </div>
    <div class="nav-links"><%= link_to "Log Out", destroy_session_path(:user ), :method => :delete %></div>
  <% end %>
  <% if !current_user %>
  <div class="about_log">
    <div class="nav-links">
      <a href="/users"><div class="item">About</div></a>
    </div>
  </div>
    <div class="nav-inner">
      <div class="nav-links"><%= link_to("Sign Up", new_user_registration_path)%></div>
      <div class="nav-links"><%= link_to("Log In", new_user_session_path)%></div>
    </div>
  <% end %>
</div>
# ###################################################################################################################
<div class="slogan">
<h3>Love where you live.</h3>
</div>

<div class="search-div">

<div class="ui massive icon input">
<input class="prompt" type="text" placeholder="Search buildings..."  id="autocomplete">
<button id="btn"><a href="/buildings/show"><i class="search icon"></i></a></button>
</div>

</div>
<div class="results"></div>

</div>
  
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['SQ_GOOGLE_KEY']%>&libraries=places&callback=initAutocomplete"></script>

<script>


  document.getElementById("btn").addEventListener("click", function() {
    window.name = document.getElementById("autocomplete").value;
    console.log(window.name);
    console.log(document.getElementById("autocomplete").value);
});


</script>

  </body>
</html>