<div class="cont">
<div class="log">
<h2>Log in</h2>
<div class ="ui form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-container">
  <div class="field">
   <div class="input-field"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="field">
    <div class="input-field"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
  <%= f.submit "Log In", :class =>"ui primary button" %>
  <%= render "devise/shared/links" %>
</div>
<% end %>
</div>
</div>
</div>
</div>