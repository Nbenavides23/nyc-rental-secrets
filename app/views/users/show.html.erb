<div id="card_profile">
    <div class="ui cards">
        <div class="card">
            <div class="image">
                <img src="https://images.unsplash.com/photo-1527585743534-7113e3211270?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=7130efae54b6595afe9fb83ca420344a&auto=format&fit=crop&w=1000&q=80">
            </div>
            <thead>

                <p>
                    <strong>Username:</strong>
                    <%= @user.username %>
                </p>

                <p>
                    <strong>Name:</strong>
                    <%= @user.first_name %>
                </p>
                        
                <p>
                    <strong>Last name:</strong>
                    <%= @user.last_name %>
                </p>

                <p>
                    <strong>Birthday</strong>
                    <%= @user.birthdate %>
                </p>
                    
            </thead>
                
        </div>
    </div>
</div>