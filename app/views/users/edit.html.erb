<div id="wrap">
    <div id="profile_content">
        <div class="ui card purple">
            <div class="content">
                <div class="ui right floated header">Edit Profile</div>
                    <div class="description">
                        <%= form_for @user do |form| %>
                            <tr>
                            <ul>
                                <div class="ui clearing divider"></div>
                                <td> Username: <%= form.text_field :username %> </td>
                                <td> First Name: <%= form.text_field :first_name %> </td>
                                <td> Last Name: <%= form.text_field :last_name %> </td>
                                <td> Birthday: <%= form.date_field :birthdate %> </td>
                                <div class="ui clearing divider"></div>
                                <button class="ui right floated tiny button purple" type="submit">Submit</button>
                                <%= link_to 'Back', user_path,  :class=> "ui tiny purple button"%>
                            </ul>
                        <% end %>
                        </tr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


